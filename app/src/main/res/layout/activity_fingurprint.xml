<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/backgroundset"
    tools:context=".FingurprintActivity">

    <TextView
        android:id="@+id/fingure_title_id"
        android:text="Use your fingureprint to login"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/fingur_image_id"
        android:src="@drawable/ic_fingerprint_black_24dp"
        android:layout_width="120dp"
        android:layout_height="150dp" />
    <TextView
        android:id="@+id/fingur_mass_id"
        android:textSize="18dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/ok_id"
        android:text="ok"
        android:visibility="gone"
        android:background="@drawable/joinnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>