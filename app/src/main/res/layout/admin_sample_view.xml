<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20sp"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    app:cardElevation="15dp"
    android:orientation="vertical"
    android:background="#F8C8C2">
    <RelativeLayout
        android:background="@drawable/joinnow"
        android:backgroundTint="#F874A0"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:id="@+id/sample_employ_list_image_id"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <TextView
            android:id="@+id/sample_employ_list_name_id"
            android:layout_below="@+id/sample_employ_list_image_id"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/black"
            android:text="Employee Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/sample_employ_list_phone_id"
            android:layout_below="@+id/sample_employ_list_name_id"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/black"
            android:text="Employee Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/sample_employ_list_phone_id"
            android:id="@+id/sample_employ_list_address_id"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/black"
            android:text="Employee Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>